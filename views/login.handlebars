{{!-- This handlebar handles the login and the signin --}}

<div id="loginCard" class="hidden bg-blue-50 max-w-sm border-8 border-blue-900 rounded-lg w-11/12">
  <h class="text-2xl font-bold pl-4">Log In</h>
  <p class="pb-2 pl-4">Fill out details and log in.</p>
  <form class="login-form rounded px-8 pt-6 pb-8 mb-4">
    <div class="mb-4">
      <label class="block bg-blue-50 text-sm font-bold mb-2" for="username">Email</label>
      <input
        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
        id="email-login" type="text" placeholder="Email@type.here">
    </div>
    <div class="mb-6">
      <label class="block bg-blue-50 text-sm font-bold mb-2" for="password">
        Password
      </label>
      <input
        class="shadow appearance-none border border-red-500 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
        id="password-login" type="password" placeholder="*************">
      <p class="text-red-500 text-xs italic">Please choose a password.</p>
    </div>
    <div class="flex items-center justify-between">
      <button
        class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
        type="submit">
        Log In
      </button>
      <p class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" id="signup">
        Create Account?
      </p>
    </div>
  </form>
</div>

